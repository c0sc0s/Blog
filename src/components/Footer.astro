---
import { SITE_TITLE, SITE_EMAIL } from "../consts";
const { theme } = Astro.props;
import { SITE_NAME } from "../consts";
const date = new Date();
const year = date.getFullYear();
---

<div class:list={["footer-main", { "footer-dark": theme === "dark" }]}>
  <div class="content-body footer-wraper">
    <div class="footer-box">
      <div class="foot-nav">
        <div class="foot-nav-items">
          <div class="item">
            <div class="logo">{SITE_TITLE}</div>
            <div class="email">{SITE_EMAIL}</div>
            <a href="https://the.top/cosine" target="_blank">TOP Link</a>
          </div>

          <!-- 项目 -->
          <div class="item products">
            <div class="item-title">Projects</div>

            <a href="https://docs.cos02.top" target="_blank">JsDeepIn</a>
          </div>

          <div class="item community">
            <div class="item-title">Medium</div>
            <a href="https://github.com/c0sc0s" target="_blank">GitHub</a>
            <a
              href="https://space.bilibili.com/180492401?spm_id_from=333.1007.0.0"
              target="_blank">Bilibili</a
            >

          </div>

        </div>
      </div>
      <div class="bottom">
        <div class="copyright">
          &copy; {`${year} ${SITE_NAME}`}
        </div>
      </div>
    </div>
  </div>
</div>
